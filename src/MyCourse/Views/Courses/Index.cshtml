
<h1>Catalogo dei Corsi</h1>

@for (int i = 1; i <= 10; i++)
{
<div class="row">
    <hr>
    <div class="col-md-1">
        <img src="~/logo.svg" width="50">
    </div>
    <div class="col-md-5">
        <h2>Titolo del corso</h2>
        <author>di Nome AUTORE</author>
    </div>
    <div class="col-md-2 rating">
        <i class="fas fa-star"></i> 
        <i class="fas fa-star"></i> 
        <i class="fas fa-star"></i> 
        <i class="fas fa-star"></i> 
        <i class="fas fa-star-half"></i> 
    </div>
    <div class="col-md-2">
        <div class="final-price">
        <span>EUR </span>10,99
        </div> 
        <div class="initial-price">
        <span>EUR </span><s>12,99</s>
        </div> 
    </div>
    <div class="col-md-2">
    <a class="btn btn-outline-primary" 
    asp-action="Detail" asp-route-id="5">Dettagli</a>

    </div>
</div>
<br/>
}